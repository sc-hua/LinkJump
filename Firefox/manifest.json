{
    "manifest_version": 2,
    "name": "Page Redirector",
    "version": "1.0",
    "description": "Redirect pages to alternative domains",
    
    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "js": ["utils.js", "content.js"],
            "matches": [
                "*://arxiv.org/*",
                "*://github.com/*",
                "*://www.scholar-inbox.com/*",
                "*://*/*"
            ]
        }
    ],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "images/icon-48.png",
            "96": "images/icon-96.png"
        }
    },

    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "contextMenus"
    ],

    "web_accessible_resources": [
        "images/*"
    ]
}
