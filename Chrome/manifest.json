{
    "manifest_version": 3,
    "name": "Arxiv Redirector",
    "version": "0.1",
    "description" : "Redirect arXiv pages to alternative domains",
    "icons": {"128": "icon.png"},
    "action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "notifications",
        "tabs", "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://arxiv.org/*",
                "*://papers.cool/*",
                "*://www.alphaxiv.org/*",
                "*://hjfy.top/*"
            ],
            "js": ["content.js"]
        }
    ]
}