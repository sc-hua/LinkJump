{
    "manifest_version": 3,
    "name": "Page Redirector",
    "version": "1.0",
    "description": "Redirect arXiv pages to alternative domains",
    "icons": {"128": "icon.png"},
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://arxiv.org/*",
                "*://github.com/*",
                "*://www.scholar-inbox.com/*",
                "*://huggingface.co/*"
            ],
            "js": ["utils.js", "content.js"]
        }
    ]
}